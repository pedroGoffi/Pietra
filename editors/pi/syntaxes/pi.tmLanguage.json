{
    "scopeName": "source.pi",
    "name": "Pietra Language",
    "patterns": [
        {
            "name": "keyword.control.pi",
            "match": "\\b(new|if|elif|else|let|const|stmt|while|for|fn|struct|union|comptime|use|return|switch)\\b"
        },
        {
            "name": "keyword.operator.pi",
            "match": "\\b(and|or|extern|true|false)\\b"
        },
        {
            "name": "storage.type.pi",
            "match": "\\b(i64|int|i32|i16|i8|char|cstr|void|f32|f64|Self)\\b"
        },
        {
            "name": "string.quoted.double.pi",
            "match": "\"(\\\\.|[^\"])*\""
        },
        {
            "name": "comment.line.double-slash.pi",
            "begin": "//",
            "end": "$"
        },
        {
            "name": "constant.numeric.pi",
            "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
            "name": "variable.other.pi",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
    ],
