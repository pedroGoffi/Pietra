#package "pietra.parser"
use std{std}
use selfhost{token, lexer}

literal_expr :: (): *Expr {    
    val: any;
    if is_kind(TK_EOF){
        val = token.name;
        next_token();
        return expr_name(val);
    }

    if is_kind(TK_INT){
        val = std.stoi_base(token.name, 10);
        next_token();        
        return expr_int(val)
    }
    
}
parse :: (){
    return literal_expr()
}