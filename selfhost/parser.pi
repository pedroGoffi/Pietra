#package "pietra.parser"
use std{std}
use selfhost{token, lexer, ast}

literal_expr :: (): *Expr {    
    val: any;
    if is_kind(TK_NAME){
        val = token.name;
        next_token();
        return expr_name(val);
    }

    if is_kind(TK_INT){
        val = std.stoi_base(token.name, 10);
        next_token();                
        return expr_int(val)
    }
    
    std.puts("no expr boss...\n")
    std.puts(stream)
    exit(1)
}
parse :: (): *Expr{
    return literal_expr()
}